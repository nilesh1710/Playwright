{
  "name": "tests-examples",
  "version": "1.0.0",
  "description": "Playwright test suite with Allure reporting",
  "main": "test.spec.js",
  "scripts": {
 "test": "npx playwright test",
  "test:chrome": "npx playwright test --project=chrome --config=playwright.config.js",
  "test:firefox": "npx playwright test --project=firefox --config=playwright.config.js",
  "test:webkit": "npx playwright test --project=webkit --config=playwright.config.js",
  "test:all": "npx playwright test --config=playwright.config.ts",
  "allure:generate": "npx allure generate allure-results --clean",
  "allure:open": "npx allure open allure-report",
  "allure:report": "npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "playwright",
    "testing",
    "allure"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@lambdatest/playwright-driver": "^1.0.6",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.14",
    "allure-playwright": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
